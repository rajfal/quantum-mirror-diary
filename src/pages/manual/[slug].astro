---
export const prerender = false;

import { getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const { slug } = Astro.params;
const entry = await getEntry('manual', slug).catch(() => null);
const notFound = !entry;

let Content, data;
if (!notFound) {
  const rendered = await entry.render();
  Content = rendered.Content;
  data = entry.data;
}
---

<BaseLayout>
  <div class="manual-container">
    {notFound ? (
      <div class="section-block not-found">
        <h1>üìÑ Manual Not Found</h1>
        <p>This manual entry doesn‚Äôt exist: <code>{slug}</code></p>
        <p><a href="/manual">‚Üê Back to Manual Index</a></p>
      </div>
    ) : (
      <article class="manual-article">
  <h1 class="manual-title">üß™ {data.title}</h1>
  {data.tags && <p class="manual-meta">Tags: {data.tags.join(', ')}</p>}
  <div class="manual-content">
    <Content />
    <p class="back-to-archive">
     ‚Üê <a href="/manual">Back to Manual Archive</a>
    </p>
  </div>
</article>

    )}
  </div>
</BaseLayout>

<style>

.manual-container {
  max-width: 800px;
  margin: 3rem auto;
  padding: 0 1rem;
}


:global(.manual-content a) {
  color: #00ffee;
  text-decoration: underline;
  transition: all 0.2s ease-in-out;
}

:global(.manual-content a:hover) {
  color: #00ffff;
  text-shadow: 0 0 4px #00ffff;
}


.manual-article {
  font-family: 'Share Tech Mono', monospace;
  color: #cfffff;
}

.manual-title {
  font-size: 1.7rem;
  color: #00eaff;
  margin-bottom: 0.5rem;
  text-shadow: 0 0 4px rgba(0, 255, 255, 0.4);
}

.manual-meta {
  font-size: 0.9rem;
  color: #88ffff;
  margin-bottom: 2rem;
  opacity: 0.7;
}

.section-block.not-found {
  font-family: 'Share Tech Mono', monospace;
  color: #00ff88;
  background: rgba(0, 255, 136, 0.05);
  border-left: 4px solid #00ff88;
  padding: 2rem;
  margin-top: 3rem;
  box-shadow: 0 0 6px rgba(0, 255, 136, 0.15);
}

.section-block.not-found a {
  color: #00ffee;
  text-decoration: underline;
}

.section-block.not-found a:hover {
  color: #00ffff;
  text-shadow: 0 0 4px #00ffff;
}

.back-to-archive {
  margin-top: 3rem;
  text-align: center;
  font-family: var(--font-mono, monospace);
  font-size: 0.9rem;
  opacity: 0.7;
}

.back-to-archive a {
  color: #00eaff;
  text-decoration: underline;
}


</style>
