    }

    p {
      margin-bottom: 1.5rem;
      font-size: 1rem;
      line-height: 1.75;
    }

    em {
      color: #00eaff;
      font-style: italic;
    }

    .highlight {
      background-color: #1a1f2e;
      border-left: 4px solid #00eaff;
      padding: 1rem 1.25rem;
      font-style: italic;
      margin: 2rem 0;
      box-shadow: 0 0 8px rgba(0, 255, 255, 0.1);
    }

    a {
      color: #00ffff;
      text-decoration: underline;
    }

    a:hover {
      color: #d67dff;
    }


.timeline-invite {
  text-align: center;
  margin-top: 2rem;
  font-family: 'Share Tech Mono', monospace;
  color: #00eaff;
  opacity: 0;
  animation: timelineFade 2.4s ease-in-out 2s forwards;
}

@keyframes timelineFade {
  0%   { opacity: 0; }
  30%  { opacity: 0.2; }
  45%  { opacity: 0.05; }
  60%  { opacity: 0.5; }
  80%  { opacity: 0.1; }
  100% { opacity: 1; }
}

.timeline-link {
  color: #00eaff;
  font-weight: 600;
  text-decoration: none;
  text-shadow: 0 0 4px rgba(0, 234, 255, 0.5);
  transition: all 0.2s ease-in-out;
}

.timeline-link:hover {
  color: #00ffff;
  text-shadow: 0 0 8px rgba(0, 255, 255, 0.6);
}


