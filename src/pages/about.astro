<BaseLayout>
  <style>
    .about-container {
      max-width: 850px;
      margin: 0 auto;
      padding: 2rem;
      color: #e6f2ff;
      font-family: 'Share Tech Mono', monospace;
    }

.about-page blockquote {
  margin-top: 2rem;
  padding-left: 1.2rem;
  border-left: 3px solid #00ff88;
  font-family: 'Share Tech Mono', monospace;
  color: #00ff88;
  font-size: 0.95rem;
  line-height: 1.5;
  text-shadow: 0 0 2px #00ff88;
  position: relative;
  animation: flicker 4s infinite;
}

@keyframes flicker {
  0%, 100% { opacity: 1; }
  45% { opacity: 0.9; }
  50% { opacity: 0.6; }
  55% { opacity: 0.92; }
  70% { opacity: 0.8; }
}

.about-page blockquote::after {
  content: "";
  position: absolute;
  inset: 0;
  background: repeating-linear-gradient(
    to bottom,
    transparent 0px,
    rgba(0, 255, 136, 0.03) 2px,
    transparent 4px
  );
  pointer-events: none;
  z-index: 1;
}

    h1 {
      font-family: 'Playfair Display', serif;
      font-size: 2.2rem;
      color: #d67dff;
      margin-bottom: 1rem;
