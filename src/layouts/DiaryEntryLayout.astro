      background-color: var(--bg);
      color: var(--text);
      font-family: var(--font-body);
      line-height: 1.75;
      letter-spacing: 0.02em;
    }

.intent-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 2rem;
}

.intent-toggle {
