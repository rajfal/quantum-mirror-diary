  color: #ffbd75;
  font-family: 'Share Tech Mono', monospace;
  font-size: 1rem;
  border: none;
  margin-bottom: 0.5rem;
  cursor: pointer;
  text-shadow: 0 0 4px rgba(255, 190, 110, 0.3);
}

.intent-toggle:hover {
  color: #ffd99c;
}

.intent-header {
