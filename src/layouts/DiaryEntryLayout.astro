---
import BaseLayout from './BaseLayout.astro';
const { date, showIntent, present, future, reflection } = Astro.props;

// Helper: convert soft line breaks into individual <p> tags
function toParagraphs(markdown: string): string {
  const lines = markdown
    .split('\n\n')
    .map(p => `<p>${p.trim()}</p>`)
    .join('');

  // ✅ Replace [label](hook:slug) → proper styled link with actual URLs
  return lines.replace(/<a href="hook:([\w-]+)">(.+?)<\/a>/g, (_match, slug, text) => {
    return `<a class="hook-link" href="/hooks/${slug}">${text}</a>`;
  });
}

---

<BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('toggleIntent');
    const block = document.getElementById('intentBlock');

    toggle.addEventListener('click', () => {
      block.classList.toggle('collapsed');
      toggle.textContent = block.classList.contains('collapsed')
        ? 'System Intent ▸'
        : 'System Intent ▾';
    });
  });

</script>

  <style>
    :root {
      --bg: #101014;
      --accent: #d67dff;   /* For Present section */
      --echo: #00eaff;     /* For Future section */
